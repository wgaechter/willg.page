@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    List<Models.ArticleModel> articles = Model._articles;
}

<div class="text-center" id="WelcomeHeader">
    <h1 class="display-4">Welcome</h1>
    <p>Discover my projects and achievements on this portfolio website, crafted using ASP.NET Razor Pages. Explore my journey, skills, and professional growth through a dynamic and interactive interface.</p>
</div>

@{
    //Welcome bar with a basic welcome and overview

    //Scroll down to the article tiles with a good templated one that matches the vibe
    ////https://codepen.io/marhdev/pen/bdXeqQ
    ////https://codepen.io/tterb/pen/KoNzXw
    //
    //https://www.learnrazorpages.com/razor-pages/forms

    //On click of article, get the rest of the info from the database and generate the html to glide up on screen
    ////Article setup programatically based on text size/amount of paragraphs
    ////3 Images per, one Thumbnail and 2 content worthy, one should be stock-like flavor
    <div class="ArticleContainer">
        @foreach (var a in articles)
        {
        <!-- Card -->
            <article class="article" id=@a.ArticleId>
                @{if (a.ImgLoc != null)
                {
                    var articleImg = Url.Content(String.Concat("~/lib/static/img/", a.ImgLoc));
                    <img class="articleImg" id="img_@a.ArticleId" src="@articleImg"/>
                }
                else
                {
                    <img class="articleImg" id="img_@a.ArticleId" src="https://placehold.co/600x400/EEE/31343C"/>
                }
                }
                <div class="info-block">
                    <h4 class="Title">@a.Title</h4>
                    <h6 class="Subtitle">@a.Subtitle</h6>
                    <p class="Content">@a.Content</p>
                    <a href="#" class="readMore">
                        Read more
                        <span aria-hidden="true">
                            →
                        </span>
                    </a>
                </div>
            </article>
        }
    </div>

    //Underneath Container, this will hold the current read me article, rise up from below and cover the other articles in a top layer
    //JS will control the content depending on the button clicked

    <div class="fullArticleContainer" id="fullArticleContainer">
        <article class="Full_article">
            <h4 class="Full_Title"></h4>
            <img class="Full_articleImg" src="" />
            <h6 class="Full_Subtitle"></h6>
            <p class="Full_Content"></p>
        </article>
        <button class="returnButton">
            <svg height="16" width="16" xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 1024 1024"><path d="M874.690416 495.52477c0 11.2973-9.168824 20.466124-20.466124 20.466124l-604.773963 0 188.083679 188.083679c7.992021 7.992021 7.992021 20.947078 0 28.939099-4.001127 3.990894-9.240455 5.996574-14.46955 5.996574-5.239328 0-10.478655-1.995447-14.479783-5.996574l-223.00912-223.00912c-3.837398-3.837398-5.996574-9.046027-5.996574-14.46955 0-5.433756 2.159176-10.632151 5.996574-14.46955l223.019353-223.029586c7.992021-7.992021 20.957311-7.992021 28.949332 0 7.992021 8.002254 7.992021 20.957311 0 28.949332l-188.073446 188.073446 604.753497 0C865.521592 475.058646 874.690416 484.217237 874.690416 495.52477z"></path></svg>
            <span>Back</span>
        </button>
    </div>
}
